generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String  @id @default(uuid())
  username  String  @unique
  email String @unique
  password String 
  favoritePokemons FavoritePokemon[]
}

model FavoritePokemon {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  favoritePokemonId String

  @@unique([userId, favoritePokemonId]) 
}